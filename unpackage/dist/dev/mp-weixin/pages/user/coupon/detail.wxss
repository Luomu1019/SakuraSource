.list {
  display: flex;
  width: 100%;
  position: relative;
}
.sub-list {
  width: 100%;
  padding-top: 10rpx;
}
.sub-list .row {
  width: 92%;
  height: 24vw;
  margin: 10rpx auto;
  border-radius: 8rpx;
  align-items: center;
  position: relative;
  overflow: hidden;
  z-index: 4;
  border: 0;
}
.sub-list .row .carrier {
  background-color: #fff;
  position: absolute;
  width: 100%;
  padding: 0 0;
  height: 100%;
  z-index: 3;
  display: flex;
}
.sub-list .row .carrier .left {
  flex: 1;
  position: relative;
}
.sub-list .row .carrier .left .title {
  padding-top: 3vw;
  width: 90%;
  margin: 0 5%;
  font-size: 36rpx;
}
.sub-list .row .carrier .left .title .cell-icon {
  display: inline-block;
  height: 32rpx;
  margin-top: 15rpx;
  width: 32rpx;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  line-height: 32rpx;
  background: #f85e52;
  border-radius: 4rpx;
  margin-right: 12rpx;
}
.sub-list .row .carrier .left .title .cell-icon.hb {
  background: #ffaa0e;
}
.sub-list .row .carrier .left .title .cell-icon.lpk {
  background: #3ab54a;
}
.sub-list .row .carrier .left .term {
  width: 90%;
  margin: 0 5%;
  font-size: 26rpx;
  color: #999;
}
.sub-list .row .carrier .left .usage {
  width: 90%;
  margin: 0 5%;
  font-size: 26rpx;
  color: #909399;
}
.sub-list .row .carrier .left .gap-top,
.sub-list .row .carrier .left .gap-bottom {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  right: -10rpx;
  border-radius: 100%;
  background-color: #f5f5f5;
}
.sub-list .row .carrier .left .gap-top {
  top: -10rpx;
}
.sub-list .row .carrier .left .gap-bottom {
  bottom: -10rpx;
}
.sub-list .row .carrier .left .used {
  position: absolute;
  right: 10rpx;
  bottom: 5rpx;
  font-size: 24rpx;
  color: #fa436a;
}
.sub-list .row .carrier .left .shixiao {
  position: absolute;
  right: 0;
  top: -20rpx;
  font-size: 150rpx;
  z-index: 6;
  color: rgba(153, 153, 153, 0.2);
}
.sub-list .row .carrier .right {
  width: 28%;
  color: #fff;
  text-align: center;
  background: linear-gradient(to right, rgba(250, 67, 106, 0.72), rgba(250, 67, 106, 0.64));
}
.sub-list .row .carrier .right .ticket,
.sub-list .row .carrier .right .criteria {
  width: 100%;
}
.sub-list .row .carrier .right .ticket {
  padding-top: 20rpx;
}
.sub-list .row .carrier .right .ticket .num {
  font-size: 44rpx;
  font-weight: 600;
  line-height: 1.2;
}
.sub-list .row .carrier .right .ticket .unit {
  font-size: 24rpx;
}
.sub-list .row .carrier .right .criteria {
  font-size: 28rpx;
}
.sub-list .row .carrier .right .btn-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sub-list .row .carrier .right .btn-group .use {
  flex: 1;
  margin: 0 6rpx;
  height: 40rpx;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  background-color: #fff;
  color: #fa436a;
  border-radius: 40rpx;
  padding: 0 4rpx;
}
.drawer .close .btn {
  width: 320rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50px;
  margin-top: 70rpx;
  background: #fa436a;
  color: #fff;
  font-size: 32rpx;
  border: none;
}
.drawer .close .btn:after {
  border-radius: 100px;
}

