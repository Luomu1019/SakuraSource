page {
  background: #fff;
}
.container {
  padding-top: 60px;
  position: relative;
  width: 100vw;
  overflow: hidden;
}
.container .wrapper {
  position: relative;
  width: 100vw;
  z-index: 90;
  background: #fff;
  padding-bottom: 40rpx;
}
.container .wrapper .welcome {
  position: relative;
  left: 50rpx;
  top: -90rpx;
  font-size: 46rpx;
  color: #555;
  text-shadow: 1px 0px 1px rgba(0, 0, 0, 0.3);
}
.container .wrapper .input-content {
  padding: 0 60rpx;
}
.container .wrapper .input-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding: 0 30rpx;
  background: #f8f6fc;
  height: 120rpx;
  border-radius: 4px;
  margin-bottom: 50rpx;
}
.container .wrapper .input-item:last-child {
  margin-bottom: 0;
}
.container .wrapper .input-item .tit {
  height: 50rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  color: #606266;
}
.container .wrapper .input-item input {
  height: 60rpx;
  font-size: 30rpx;
  color: #303133;
  width: 100%;
}
.container .wrapper .input-item-sms-code {
  position: relative;
}
.container .wrapper .input-item-sms-code .sms-code-btn {
  position: absolute;
  right: 20rpx;
  color: #111;
  bottom: 20rpx;
  font-size: 28rpx;
}
.container .wrapper .input-item-sms-code .sms-code-resend {
  color: #999;
}
.container .wrapper .forget-section {
  font-size: 26rpx;
  color: #4399fc;
  text-align: center;
  margin-top: 40rpx;
}
.container .back-btn {
  position: absolute;
  left: 40rpx;
  z-index: 9999;
  padding-top: 25px;
  top: 40rpx;
  font-size: 40rpx;
  color: #303133;
}
.container .left-top-sign {
  font-size: 120rpx;
  color: #f8f8f8;
  position: relative;
  left: -16rpx;
}
.container .right-top-sign {
  position: absolute;
  top: 80rpx;
  right: -30rpx;
  z-index: 95;
}
.container .right-top-sign:before, .container .right-top-sign:after {
  display: block;
  content: '';
  width: 400rpx;
  height: 80rpx;
  background: #b4f3e2;
}
.container .right-top-sign:before {
  -webkit-transform: rotate(50deg);
          transform: rotate(50deg);
  border-radius: 0 50px 0 0;
}
.container .right-top-sign:after {
  position: absolute;
  right: -198rpx;
  top: 0;
  -webkit-transform: rotate(-50deg);
          transform: rotate(-50deg);
  border-radius: 50px 0 0 0;
  /* background: pink; */
}
.container .register-section {
  margin: 50rpx 0 50rpx 0;
  width: 100%;
  font-size: 26rpx;
  color: #606266;
  text-align: center;
}
.container .register-section text {
  color: #4399fc;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
