page {
  background-color: #f8f8f8;
}
.evaluation {
  margin-bottom: 30rpx;
}
.evaluation .evaluation-item {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0rpx 5rpx 25rpx rgba(0, 0, 0, 0.05);
}
.evaluation .product-info {
  display: flex;
}
.evaluation .product-info .product-image {
  width: 200rpx;
  height: 150rpx;
}
.evaluation .product-info .product-content {
  flex: 1;
  margin-left: 20rpx;
}
.evaluation .product-info .product-content .product-name {
  font-size: 28rpx;
  color: #303133;
  line-height: 32rpx;
  min-height: 60rpx;
}
.evaluation .product-info .product-content .product-sku-name {
  display: block;
  font-size: 28rpx;
  color: #303133;
}
.evaluation .product-rate {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #303133;
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.evaluation .product-rate .product-rate-wrapper {
  margin-top: 10rpx;
  display: inline-block;
}
.evaluation .product-textarea {
  margin-top: 20rpx;
  height: 360rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  position: relative;
}
.evaluation .product-textarea .textarea {
  width: 100%;
}
.evaluation .product-textarea .tips {
  position: absolute;
  bottom: 10rpx;
  right: 0;
  font-size: 24rpx;
  color: #909399;
}
.evaluation .product-textarea .tips .f {
  color: #4cd964;
}
.evaluation .product-textarea .tips .s {
  color: #fa436a;
}
.evaluation .product-textarea .anonymous {
  color: #909399;
  font-size: 24rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.evaluation .upload-image {
  overflow: hidden;
  margin: 40rpx 0;
}
.evaluation .upload-image .upload-image-wrapper {
  display: inline-block;
  position: relative;
  width: 200rpx;
  height: 200rpx;
  padding: 10rpx;
  margin: 10rpx;
}
.evaluation .upload-image .upload-image-wrapper .image {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
}
.evaluation .upload-image .upload-image-wrapper .image-close {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
.evaluation .upload-image .add {
  display: inline-block;
  overflow: hidden;
  width: 180rpx;
  height: 180rpx;
  text-align: center;
  border: 1px solid rgba(0, 0, 0, 0.05);
  font-size: 88rpx;
  color: #606266;
  font-weight: 100;
}
.evaluation .confirm-btn {
  width: 630rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50px;
  margin-top: 50rpx;
  font-size: 32rpx;
}
.evaluation .confirm-btn:after {
  border-radius: 100px;
}
.evaluation .uni-uploader__file {
  width: 190rpx;
  height: 190rpx;
}
.evaluation .uni-uploader__input-box {
  width: 188rpx;
  height: 188rpx;
}

