}
.yt-list-cell.b-b:after {
  left: 30rpx;
}
.yt-list-cell .cell-icon {
  height: 32rpx;
  width: 32rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 32rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}
.yt-list-cell .cell-icon.hb {
  background: #ffaa0e;
}
.yt-list-cell .cell-icon.lpk {
  background: #3ab54a;
}
.yt-list-cell .cell-more {
