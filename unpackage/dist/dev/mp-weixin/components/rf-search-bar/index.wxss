.rf-search-bar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 10;
}
.rf-search-bar .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 60vw;
  opacity: 0.9;
}
.rf-search-bar .merchant {
  line-height: 1;
  width: 100%;
  display: flex;
  align-items: center;
  z-index: 12;
  font-weight: 500;
  font-size: 32rpx;
  padding: 10rpx 30rpx 14rpx;
}
.rf-search-bar .merchant .iconshouhuodizhi {
  font-size: 40rpx;
  font-weight: 600;
  margin-right: 10rpx;
}
.rf-search-bar .merchant .iconxiajiantou1 {
  margin-left: 4rpx;
  font-size: 28rpx;
}
.rf-search-bar .header {
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 12;
  padding-bottom: 10rpx;
}
.rf-search-bar .header .addr {
  margin: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.rf-search-bar .header .addr .iconfont {
  font-weight: 500;
  font-size: 56rpx;
}
.rf-search-bar .header .addr .logo {
  width: 45rpx;
  height: 45rpx;
  border-radius: 8rpx;
  margin-left: 10rpx;
}
.rf-search-bar .header .input-box {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  margin: 6rpx 0 0 20rpx;
}
.rf-search-bar .header .input-box .wrapper {
  display: flex;
  align-items: center;
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 26rpx;
  color: #909399;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.rf-search-bar .header .input-box .wrapper .iconsousuo2 {
  font-size: 34rpx;
  margin-right: 20rpx;
}
.rf-search-bar .header .input-box input {
  width: 100%;
  padding-left: 28rpx;
  height: 28rpx;
  color: #888;
  font-size: 28rpx;
}

