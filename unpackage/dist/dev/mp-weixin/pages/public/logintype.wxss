page {
  background: #fff;
  height: calc(100% - 88rpx);
}
.login-type {
  padding-top: 80rpx;
}
.login-type .logo {
  text-align: center;
  margin-bottom: 80rpx;
}
.login-type .logo image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 28rpx;
}
.login-type .confirm-btn {
  width: 84%;
  margin: 0 7% 50rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 32rpx;
  border: 1rpx solid;
}
.login-type .confirm-btn-bg {
  background: none;
}
.login-type .footer {
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 40rpx;
  font-size: 26rpx;
}
.login-type .footer .protocol {
  color: #fa436a;
  margin: 0 10rpx;
}
.login-type .footer .d-header {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #606266;
  position: relative;
}
.login-type .footer .d-header text {
  padding: 0 30rpx;
  background: #fff;
  position: relative;
  z-index: 1;
}
.login-type .footer .d-header:after {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 300rpx;
  height: 0;
  content: '';
  border-bottom: 1px solid #ccc;
}
.login-type .footer .login-type-list {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login-type .footer .login-type-list .login-type-btn {
  border: none;
  background: none;
  padding: 0 40rpx 0 0;
  margin: 0;
}
.login-type .footer .login-type-list .login-type-btn .image {
  width: 64rpx;
  height: 64rpx;
}
.login-type .footer .login-type-list .login-type-btn:after {
  border: none;
}
.login-type .footer .login-type-list .iconfont {
  font-size: 50rpx;
  color: #606266;
}

