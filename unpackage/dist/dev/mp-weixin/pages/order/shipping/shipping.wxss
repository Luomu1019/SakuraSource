page {
  background: #f8f8f8;
}
.goods-section {
  margin-top: 16rpx;
  background: #fff;
  padding-bottom: 1px;
}
.goods-section .g-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 84rpx;
  padding: 0 30rpx;
  position: relative;
}
.goods-section .logo {
  display: block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 100px;
}
.goods-section .name {
  font-size: 30rpx;
  color: #606266;
  margin-left: 24rpx;
}
.goods-section .g-item {
  display: flex;
  margin: 20rpx 30rpx;
}
.goods-section .g-item image {
  flex-shrink: 0;
  display: block;
  width: 220rpx;
  height: 170rpx;
  border-radius: 4rpx;
}
.goods-section .g-item .right {
  flex: 1;
  padding-left: 16rpx;
  overflow: hidden;
}
.goods-section .g-item .title {
  font-size: 28rpx;
  line-height: 32rpx;
}
.goods-section .g-item .spec {
  font-size: 22rpx;
  color: #909399;
}
.goods-section .g-item .price-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #303133;
}
.goods-section .g-item .price-box .price {
  margin-bottom: 4rpx;
}
.goods-section .g-item .price-box .number {
  font-size: 26rpx;
  color: #606266;
  margin-left: 20rpx;
}
.goods-section .g-item .price-box .status {
  font-size: 24rpx;
  color: #4399fc;
}
.goods-section .g-item .step-box {
  position: relative;
}
.yt-list {
  margin-top: 16rpx;
  background: #fff;
}
.yt-list-cell {
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx 10rpx 40rpx;
  line-height: 70rpx;
  position: relative;
}
.yt-list-cell.cell-hover {
  background: #fafafa;
}
.yt-list-cell.b-b:after {
  left: 30rpx;
}
.yt-list-cell .cell-icon {
  height: 32rpx;
  width: 32rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 32rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}
.yt-list-cell .cell-icon.hb {
  background: #ffaa0e;
}
.yt-list-cell .cell-icon.lpk {
  background: #3ab54a;
}
.yt-list-cell .cell-more {
  align-self: center;
  font-size: 24rpx;
  color: #909399;
  margin-left: 8rpx;
  margin-right: -10rpx;
}
.yt-list-cell .cell-tit {
  flex: 1;
  font-size: 26rpx;
  color: #909399;
  margin-right: 10rpx;
}
.yt-list-cell .cell-tip {
  font-size: 26rpx;
}
.yt-list-cell .cell-tip.disabled {
  color: #909399;
}
.yt-list-cell.desc-cell .cell-tit {
  max-width: 90rpx;
}
.yt-list-cell .desc {
  flex: 1;
  font-size: 28rpx;
  color: #303133;
}
.yt-list-cell .copy {
  margin-left: 10rpx;
}
.uni-timeline {
  padding: 30rpx 40rpx;
  background-color: #fff;
}

