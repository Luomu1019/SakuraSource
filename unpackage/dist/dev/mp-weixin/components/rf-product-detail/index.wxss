.rf-product-detail .back-btn {
  position: fixed;
  left: 40rpx;
  z-index: 9999;
  padding-top: 25px;
  top: 40rpx;
  font-size: 40rpx;
  color: #303133;
}
.rf-product-detail .carousel {
  height: 722rpx;
  position: relative;
}
.rf-product-detail .carousel swiper {
  height: 100%;
}
.rf-product-detail .carousel .image-wrapper {
  width: 100%;
  height: 100%;
}
.rf-product-detail .carousel .swiper-item {
  display: flex;
  justify-content: center;
  align-content: center;
  height: 750rpx;
  overflow: hidden;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.01);
}
.rf-product-detail .carousel .swiper-item image {
  width: 100%;
  height: 100%;
}
.rf-product-detail .carousel .swiper-item .content {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.rf-product-detail .detail {
  padding-bottom: 60rpx;
}
.rf-product-detail .service {
  padding: 20rpx 30rpx 0;
}
.rf-product-detail .service .row {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.rf-product-detail .selected-text {
  margin-right: 4rpx;
}
.rf-product-detail .sub-list {
  margin: 40rpx 0 80rpx;
}
.rf-product-detail .sub-list .row {
  width: 100%;
  margin-bottom: 30rpx;
}
.rf-product-detail .share-bg image {
  position: fixed;
  z-index: 100;
  width: 70vw;
  height: 45vw;
  right: 20rpx;
  top: 20rpx;
}
.rf-product-detail .layer {
  position: fixed;
  z-index: 99;
  bottom: 0;
  width: 100%;
  border-radius: 10rpx 10rpx 0 0;
  background-color: #fff;
}
.rf-product-detail .layer .rf-list {
  max-height: 60vh;
  padding-bottom: 0;
  margin-bottom: 10rpx;
}
.rf-product-detail .rf-swiper-slide {
  margin-top: 20rpx;
}
.rf-product-detail .rf-swiper-slide .label {
  margin-left: 10rpx;
}
.rf-product-detail .play-way {
  background-color: #fff;
  padding: 0 20rpx;
  margin: 20rpx 0;
  font-size: 28rpx;
}
.rf-product-detail .play-way .title {
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.rf-product-detail .play-way .title .iconfont {
  margin-left: 0.13rem;
  font-size: 0.28rem;
  color: #717171;
}
.rf-product-detail .play-way .way {
  font-size: 26rpx;
  padding: 20rpx 0;
  display: flex;
}
.rf-product-detail .play-way .way .item {
  flex: 1;
  text-align: center;
}
.rf-product-detail .play-way .way .item .tip {
  font-size: 0.22rem;
  color: #a5a5a5;
}
.rf-product-detail .play-way .way .arrow {
  width: 40rpx;
}
.rf-product-detail .play-way .way .arrow .iconfont {
  color: #909399;
  font-weight: 100;
}
.rf-product-detail .assemble {
  background-color: #fff;
}
.rf-product-detail .assemble .assemble-item {
  height: 120rpx;
  border-bottom: 1px solid #f0f0f0;
}
.rf-product-detail .assemble .assemble-item .pictxt {
  display: flex;
  justify-content: space-between;
}
.rf-product-detail .assemble .assemble-item .pictxt .picture {
  display: flex;
}
.rf-product-detail .assemble .assemble-item .pictxt .picture image {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx 0;
  border-radius: 50%;
}
.rf-product-detail .assemble .assemble-item .pictxt .picture .text {
  line-height: 120rpx;
  margin-left: 20rpx;
}
.rf-product-detail .assemble .assemble-item .pictxt .right {
  display: flex;
  align-items: center;
}
.rf-product-detail .assemble .assemble-item .pictxt .right .time-wrapper {
  text-align: right;
  margin-right: 20rpx;
}
.rf-product-detail .assemble .assemble-item .pictxt .right .time-wrapper .lack {
  font-size: 24rpx;
}
.rf-product-detail .assemble .assemble-item .pictxt .right .time-wrapper .lack .font-color-red {
  margin: 0 4rpx;
}
.rf-product-detail .assemble .assemble-item .pictxt .right .time-wrapper .time {
  font-size: 24rpx;
  color: #909399;
}
.rf-product-detail .assemble .assemble-item .pictxt .right .spellBnt {
  font-size: 24rpx;
  width: 120rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 48rpx;
}
.rf-product-detail .c-list {
  font-size: 26rpx;
  color: #606266;
  background: #fff;
}
.rf-product-detail .c-list .c-row {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  position: relative;
}
.rf-product-detail .c-list .tit {
  width: 140rpx;
}
.rf-product-detail .c-list .con {
  flex: 1;
  color: #303133;
}
.rf-product-detail .c-list .con .selected-text {
  margin-right: 10rpx;
}
.rf-product-detail .c-list .bz-list {
  height: 40rpx;
  font-size: 26rpx;
  color: #303133;
}
.rf-product-detail .c-list .bz-list text {
  display: inline-block;
  margin-right: 30rpx;
}
.rf-product-detail .c-list .con-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #303133;
  line-height: 40rpx;
}
.rf-product-detail .c-list .con-list .buy-now {
  color: #fa436a;
}
.rf-product-detail .c-list .red {
  color: #fa436a;
}
.rf-product-detail .kefu-bg {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 98;
}
.rf-product-detail .kefu-bg image {
  width: 60vw;
  height: 60vw;
  border-radius: 12rpx;
  z-index: 98;
}

