.serach {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}
.serach .content {
  display: flex;
  align-items: center;
  width: 100%;
  height: 60rpx;
  background: #fff;
  overflow: hidden;
  transition: all 0.2s linear;
  border-radius: 30px;
}
.serach .content .content-box {
  width: 100%;
  display: flex;
  align-items: center;
}
.serach .content .content-box .iconfont {
  color: grey;
  margin: 0 6rpx 0 12rpx;
}
.serach .content .content-box.center {
  justify-content: center;
}
.serach .content .content-box .input {
  width: 100%;
  max-width: 100%;
  line-height: 60rpx;
  height: 60rpx;
  transition: all 0.2s linear;
}
.serach .content .content-box .input.center {
  width: 200rpx;
}
.serach .content .content-box .input.sub {
  width: auto;
  color: grey;
}
.serach .content .serachBtn {
  height: 100%;
  flex-shrink: 0;
  padding: 0 30rpx;
  line-height: 60rpx;
  transition: all 0.3s;
}
.serach .button {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  flex-shrink: 0;
  width: 0;
  transition: all 0.2s linear;
  white-space: nowrap;
  overflow: hidden;
}
.serach .button.active {
  padding-left: 15rpx;
  width: 100rpx;
}
.icon {
  font-family: iconfont;
  font-size: 32rpx;
  font-style: normal;
  color: #999;
}

