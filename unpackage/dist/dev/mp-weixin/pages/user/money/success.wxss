page {
  background-color: #f8f8f8;
}
.pay-success .pay-section {
  height: 400rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pay-success .pay-section .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 60vw;
}
.pay-success .pay-section .tips-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.pay-success .pay-section .tips-wrapper .iconfont {
  font-size: 132rpx;
  margin-right: 20rpx;
}
.pay-success .pay-section .tips-wrapper .content .title {
  font-size: 36rpx;
}
.pay-success .pay-section .tips-wrapper .content .tip {
  font-size: 26rpx;
}
.pay-success .pay-card {
  width: 90%;
  height: 520rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: -80rpx 5% 0;
  box-shadow: 0rpx 5rpx 25rpx rgba(0, 0, 0, 0.05);
}
.pay-success .pay-card .pay-card-money {
  text-align: center;
  font-size: 44rpx;
  padding: 20rpx 0;
  color: #000;
  font-weight: 500;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}
.pay-success .pay-card .item {
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 30rpx;
  color: #303133;
}
.pay-success .pay-card .item .tit {
  color: #909399;
}
.pay-success .btn-group {
  padding-top: 60rpx;
}
.pay-success .btn-group .confirm-btn {
  margin-top: 30rpx;
  width: 72%;
}

