page {
  background-color: #fff;
}
.myVideo {
  position: fixed;
  top: 50%;
  right: 100%;
}
.content {
  width: 100%;
}
.content view {
  display: flex;
}
.content .label {
  padding: 0 2%;
  flex-wrap: wrap;
}
.content .label view {
  padding: 0 20rpx;
  height: 50rpx;
  border-radius: 40rpx;
  border: solid 1rpx #ddd;
  align-items: center;
  font-size: 26rpx;
  margin: 10rpx 20rpx 10rpx 0;
}
.content .label view.on {
  border: solid 1rpx;
}
.content .list {
  flex-wrap: wrap;
  padding: 20rpx 4%;
}
.content .list .row {
  width: 100%;
  margin-top: 30rpx;
}
.content .list .row .left {
  width: 10vw;
  flex-shrink: 0;
  margin-right: 10rpx;
}
.content .list .row .left .face {
  width: 100%;
}
.content .list .row .left .face image {
  width: 10vw;
  height: 10vw;
  border-radius: 100%;
}
.content .list .row .right {
  width: 100%;
  flex-wrap: wrap;
}
.content .list .row .right .name-date {
  width: 100%;
  justify-content: space-between;
  align-items: baseline;
}
.content .list .row .right .name-date .username {
  font-size: 32rpx;
  color: #555;
}
.content .list .row .right .name-date .date {
  font-size: 28rpx;
  color: #aaa;
}
.content .list .row .right .spec {
  width: 100%;
  color: #aaa;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .list .row .right .first {
  width: 100%;
  flex-wrap: wrap;
}
.content .list .row .right .first .rat {
  font-size: 28rpx;
  line-height: 1.5;
}
.content .list .row .right .first .img-video {
  width: 100%;
  flex-wrap: wrap;
}
.content .list .row .right .first .img-video .box {
  width: calc((84.6vw - 50rpx) / 4);
  height: calc((84.6vw - 50rpx) / 4);
  margin: 5rpx 5rpx;
  position: relative;
  justify-content: center;
  align-items: center;
}
.content .list .row .right .first .img-video .box .image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.content .list .row .right .first .img-video .box .playbtn {
  position: absolute;
}
.content .list .row .right .first .img-video .box .playbtn .icon {
  font-size: 80rpx;
  color: rgba(255, 255, 255, 0.9);
}
.content .list .row .right .append {
  width: 100%;
  flex-wrap: wrap;
}
.content .list .row .right .append .date {
  width: 100%;
  height: 40rpx;
  border-left: 10rpx solid #f06c7a;
  padding-left: 10rpx;
  align-items: center;
  font-size: 32rpx;
  margin: 20rpx 0;
}
.content .list .row .right .append .rat {
  font-size: 30rpx;
}
.content .list .row .right .append .img-video {
  width: 100%;
  flex-wrap: wrap;
}
.content .list .row .right .append .img-video .box {
  width: calc((84.6vw - 10rpx - (10rpx * 4)) / 4);
  height: calc((84.6vw - 10rpx - (10rpx * 4)) / 4);
  margin: 5rpx 5rpx;
  position: relative;
  justify-content: center;
  align-items: center;
}
.content .list .row .right .append .img-video .box .image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.content .list .row .right .append .img-video .box .playbtn {
  position: absolute;
}
.content .list .row .right .append .img-video .box .playbtn .icon {
  font-size: 80rpx;
  color: rgba(255, 255, 255, 0.9);
}
.content .no-evaluation {
  overflow: hidden;
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 60rpx;
  color: #555;
}

