.notify .header {
  width: 100%;
  padding-left: 32rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: #fff;
}
.notify .header .title {
  font-size: 36rpx;
}
.notify .place {
  background-color: #ffffff;
  height: 100rpx;
}
.notify .notify-list .read {
  text-align: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.notify .notify-list .read text {
  margin-left: 20rpx;
}
.notify .notify-list .row {
  width: calc(94%);
  height: calc(22vw + 40rpx);
  margin: 0 auto 20rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  z-index: 4;
  border: 0;
}
.notify .notify-list .row .menu {
  position: absolute;
  width: 29%;
  height: 100%;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  z-index: 2;
}
.notify .notify-list .row .menu .iconfont {
  color: #fff;
  font-size: 60rpx;
}
.notify .notify-list .row .carrier {
  background-color: #fff;
  position: absolute;
  width: 100%;
  padding: 0 0;
  height: 100%;
  z-index: 3;
  display: flex;
  align-items: center;
}
@-webkit-keyframes showMenu {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
}
@keyframes showMenu {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
}
@-webkit-keyframes closeMenu {
0% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
100% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
@keyframes closeMenu {
0% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
100% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
.notify .notify-list .row .carrier.open {
  -webkit-animation: showMenu 0.25s linear both;
          animation: showMenu 0.25s linear both;
}
.notify .notify-list .row .carrier.close {
  -webkit-animation: closeMenu 0.15s linear both;
          animation: closeMenu 0.15s linear both;
}
.notify .notify-list .notify-wrapper {
  background-color: #fff;
  width: 100%;
  padding: 20rpx 30rpx 20rpx 80rpx;
  margin: 20rpx 0 0;
  border-radius: 15rpx;
  position: relative;
}
.notify .notify-list .notify-wrapper .title {
  font-size: 32rpx;
  color: #303133;
  font-weight: 500;
  margin: 0 0 10rpx;
}
.notify .notify-list .notify-wrapper .content {
  font-size: 24rpx;
  color: #606266;
  height: 75rpx;
  line-height: 36rpx;
}
.notify .notify-list .notify-wrapper .time {
  font-size: 28rpx;
  color: #909399;
}
.notify .notify-list .notify-wrapper .type {
  position: absolute;
  top: 26rpx;
  left: -10rpx;
  border: none;
  font-size: 24rpx;
  opacity: 0.8;
}
.notify .notify-list .notify-wrapper .un-read {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  position: absolute;
  top: 32rpx;
  right: 30rpx;
}
.notify .notify-empty {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  padding-bottom: 100rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: #fff;
}
.notify .notify-empty .iconfont {
  font-size: 132rpx;
}
.notify .notify-empty .empty-tips {
  display: flex;
  font-size: 26rpx;
  color: #C0C4CC;
}
.notify .notify-empty .empty-tips .navigator {
  margin-left: 16rpx;
}

