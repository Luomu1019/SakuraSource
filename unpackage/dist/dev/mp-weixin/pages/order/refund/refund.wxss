.refund {
  background-color: #fff;
  height: 100vh;
  /*问题反馈*/
}
.refund .row {
  margin: 0 auto 30rpx;
  width: calc(94%);
  height: calc(22vw + 40rpx);
  border-radius: 15rpx;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  z-index: 4;
  border: 0;
}
.refund .row .carrier {
  background-color: #fff;
  position: absolute;
  width: 100%;
  padding: 0 0;
  height: 100%;
  z-index: 3;
  display: flex;
  align-items: center;
}
@-webkit-keyframes showMenu {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
}
@keyframes showMenu {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
}
@-webkit-keyframes closeMenu {
0% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
100% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
@keyframes closeMenu {
0% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
100% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
.refund .row .carrier.open {
  -webkit-animation: showMenu 0.25s linear both;
          animation: showMenu 0.25s linear both;
}
.refund .row .carrier.close {
  -webkit-animation: closeMenu 0.15s linear both;
          animation: closeMenu 0.15s linear both;
}
.refund .row .carrier .left {
  width: 22vw;
  height: 22vw;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.refund .row .carrier .left .image {
  border-radius: 10rpx;
  width: 22vw;
  height: 22vw;
}
.refund .row .carrier .mid {
  text-align: left;
  width: 100%;
  margin: 10rpx 10rpx 0;
}
.refund .row .carrier .mid .title {
  color: #303133;
  height: 60rpx;
  line-height: 1.2;
  font-size: 28rpx;
}
.refund .row .carrier .mid .data {
  width: 100%;
  display: flex;
  align-items: center;
  margin: 10rpx 0 5rpx;
  font-size: 28rpx;
  color: #606266;
}
.refund .row .carrier .mid .data .item {
  flex: 1;
}
.refund .row .carrier .mid .data .iconfont {
  color: #909399;
  margin-right: 10rpx;
}
.refund .row .carrier .mid .data .status {
  padding: 6rpx 20rpx;
  background-color: #fa436a;
  opacity: 0.8;
  color: #fff;
  font-size: 24rpx;
  border-radius: 6rpx;
}
.refund .row .carrier .mid .bottom {
  line-height: 1.2;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #909399;
}
.refund .row .carrier .mid .bottom .price {
  font-size: 32rpx;
}
.refund .row .carrier .data {
  color: #909399;
}
.refund .product-textarea {
  margin: 20rpx 0 0;
}
.refund .product-textarea .gender-item .gender-item-radio {
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}
.refund .product-textarea .gender-item .gender-item-text {
  margin: 0 20rpx 0 10rpx;
}
.refund .product-textarea .refund-type {
  margin: 20rpx 30rpx;
}
.refund .product-textarea .textarea {
  width: 100%;
  height: 150rpx;
  padding: 0 30rpx;
}
.refund .confirm-btn {
  width: 630rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50px;
  margin-top: 50rpx;
  font-size: 32rpx;
}
.refund .confirm-btn:after {
  border-radius: 100px;
}
.refund .feedback-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}
.refund .feedback-content {
  padding: 20rpx 30rpx;
  color: #909399;
}
.refund .feedback-body {
  background: #fff;
  padding: 20rpx 30rpx;
}
.refund .feedback-body .gender-item {
  margin-right: 20rpx;
}
.refund .feedback-body .gender-item .gender-item-text {
  padding-left: 10rpx;
}
.refund .feedback-body .gender-item radio .wx-radio-input.wx-radio-input-checked {
  background: #fa436a;
  border-color: #fa436a;
}

