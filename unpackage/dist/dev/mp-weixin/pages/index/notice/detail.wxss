.rf-notice-detail .banner {
  overflow: hidden;
  position: relative;
  background-color: #ccc;
}
.rf-notice-detail .banner .banner-img {
  height: 300rpx;
  width: 100%;
}
.rf-notice-detail .banner .banner-title {
  max-height: 84rpx;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  width: 100%;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 42rpx;
  color: white;
  z-index: 11;
  background-color: rgba(0, 0, 0, 0.25);
  padding: 4rpx 20rpx;
}
.rf-notice-detail .banner-title {
  padding: 30rpx 30rpx 0;
  font-size: 32rpx;
}
.rf-notice-detail .article-meta {
  padding: 20rpx 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  color: gray;
}
.rf-notice-detail .article-meta .article-text {
  font-size: 26rpx;
  line-height: 50rpx;
  margin: 0 20rpx;
}
.rf-notice-detail .article-meta .article-author,
.rf-notice-detail .article-meta .article-time {
  font-size: 30rpx;
}
.rf-notice-detail .article-content {
  padding: 0 30rpx;
  overflow: hidden;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

