page {
  background-color: #fff;
}
.pay {
  width: 100%;
}
.pay .pay-section {
  height: 400rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pay .pay-section .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 60vw;
}
.pay .pay-section .tips-wrapper {
  text-align: center;
}
.pay .pay-section .tips-wrapper .title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.pay .pay-section .tips-wrapper .tip {
  font-size: 74rpx;
}
.price-box {
  background-color: #fff;
  height: 265rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #909399;
}
.price-box .price {
  font-size: 50rpx;
  color: #303133;
  margin-top: 12rpx;
}
.pay-type-list {
  margin: 60rpx 0;
  background-color: #fff;
  padding: 0 40rpx;
}
.pay-type-list .type-item {
  padding: 0 30rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  position: relative;
  border: 2rpx solid rgba(0, 0, 0, 0.12);
}
.pay-type-list .type-item-active {
  border: 2rpx solid;
}
.pay-type-list .iconfont {
  font-size: 45rpx;
  margin: 0 20rpx;
  color: #909399;
}
.pay-type-list .tit {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}
.pay-type-list .tit-active {
  color: #303133;
}
.pay-type-list .con {
  flex: 1;
  font-size: 24rpx;
  color: #909399;
}
.pay-type-list .con .tit {
  margin-right: 20rpx;
}
.pay-type-list .radio radio {
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
}
.confirm-btn {
  height: 86rpx;
  line-height: 86rpx;
  width: 70%;
  margin-top: 144rpx;
}

