page {
  background-color: #fff;
}
.block {
  width: 100%;
  padding: 20rpx;
}
.block .title {
  width: 100%;
  font-size: 34rpx;
}
.block .content .my {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  border-bottom: solid 1rpx #eee;
}
.block .content .my .balance {
  margin-right: 6rpx;
  font-size: 36rpx;
}
.block .content .amount {
  width: 100%;
}
.block .content .amount .list {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  flex-wrap: wrap;
}
.block .content .amount .list .box {
  width: 31%;
  margin-bottom: 20rpx;
  height: 120rpx;
  text-align: center;
  border-radius: 10rpx;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.05);
}
.block .content .amount .list .box.on {
  background-color: #f1f1f1;
  color: #333;
}
.block .content .amount .list .box .real {
  font-size: 32rpx;
  margin-top: 10rpx;
}
.block .content .amount .list .box .give {
  display: block;
  font-size: 24rpx;
}
.block .content .amount .num {
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.block .content .amount .num .text {
  padding-right: 10rpx;
  font-size: 30rpx;
}
.block .content .amount .num .give {
  font-size: 24rpx;
}
.block .content .amount .num .input {
  width: 28.2vw;
  border-bottom: solid 2rpx;
  justify-content: flex-end;
  align-items: center;
}
.block .content .amount .num .input input {
  margin: 0 20rpx;
  height: 60rpx;
  font-size: 30rpx;
  justify-content: flex-end;
  align-items: center;
}
.block .content .pay-list {
  width: 100%;
  border-bottom: solid 1rpx #eee;
}
.block .content .pay-list .row {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.block .content .pay-list .row .icon {
  width: 100rpx;
  font-size: 52rpx;
  margin-left: 15rpx;
}
.block .content .pay-list .row .iconerjiye-yucunkuan {
  color: #fe8e2e;
}
.block .content .pay-list .row .iconweixinzhifu {
  color: #36cb59;
}
.block .content .pay-list .row .iconalipay {
  color: #01aaef;
}
.block .content .pay-list .row .center {
  width: 100%;
  font-size: 30rpx;
}
.block .content .pay-list .row .right {
  width: 100rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: flex-end;
}
.pay {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.pay .btn {
  width: 70%;
  height: 80rpx;
  border-radius: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  box-shadow: 0rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
}
.pay .tis {
  margin-top: 10rpx;
  width: 100%;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: baseline;
  color: #999;
}
.pay .tis .terms {
  color: #5a9ef7;
}
.rmbLogo {
  font-size: 40rpx;
}
button {
  background-color: #007aff;
  color: #ffffff;
}
.uni-h1.uni-center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
}
.price {
  border-bottom: 1px solid #eee;
  width: 200rpx;
  height: 80rpx;
  padding-bottom: 4rpx;
}
.ipaPayBtn {
  margin-top: 30rpx;
}

