.popup_mask {
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.4);
  transition-property: opacity;
  transition-duration: 0.3s;
  opacity: 0;
  z-index: 98;
}
.popup_mask {
  opacity: 1;
}
.popup_content {
  overflow: hidden;
  box-sizing: border-box;
  padding: 40rpx 20rpx 0 20rpx;
  position: fixed;
  bottom: 30%;
  border-radius: 8px;
  left: 50%;
  margin-left: -40%;
  right: 0;
  min-height: 400rpx;
  background: #ffffff;
  width: 80%;
  z-index: 99;
}
.popup_content .title {
  text-align: center;
  font-size: 34rpx;
  padding: 10rpx 0 0 0;
}
.popup_content .explain_text {
  font-size: 30rpx;
  padding: 30rpx 30rpx 40rpx 30rpx;
  line-height: 38rpx;
}
.popup_content .explain_text .line {
  display: block;
}
.popup_content .explain_text .line .path {
  color: #007aff;
  display: inline-block;
  text-align: center;
}
.popup_content .button {
  display: flex;
  padding: 20rpx;
  align-items: center;
  font-size: 34rpx;
  justify-content: space-around;
  border-top: 1rpx solid #f2f2f2;
}
.popup_content .button view {
  text-align: center;
}

