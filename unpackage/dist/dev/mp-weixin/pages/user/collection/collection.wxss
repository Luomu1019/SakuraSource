page {
  background-color: #f8f8f8;
}
.collection .row {
  width: calc(94%);
  height: 200rpx;
  margin: 20rpx auto;
  border-radius: 15rpx;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  z-index: 4;
  border: 0;
}
.collection .row .menu {
  position: absolute;
  width: 29%;
  height: 100%;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}
.collection .row .menu .icon {
  color: #fff;
  font-size: 60rpx;
}
.collection .row .carrier {
  background-color: #fff;
  position: absolute;
  width: 100%;
  padding: 0 0;
  height: 100%;
  z-index: 3;
  display: flex;
  align-items: center;
}
@-webkit-keyframes showMenu {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
}
@keyframes showMenu {
0% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
100% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
}
@-webkit-keyframes closeMenu {
0% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
100% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
@keyframes closeMenu {
0% {
    -webkit-transform: translateX(-30%);
            transform: translateX(-30%);
}
100% {
    -webkit-transform: translateX(0);
            transform: translateX(0);
}
}
.collection .row .carrier.open {
  -webkit-animation: showMenu 0.25s linear both;
          animation: showMenu 0.25s linear both;
}
.collection .row .carrier.close {
  -webkit-animation: closeMenu 0.15s linear both;
          animation: closeMenu 0.15s linear both;
}
.collection .row .carrier .left {
  width: 22vw;
  height: 22vw;
  margin-left: 20rpx;
  margin-right: 10rpx;
  position: relative;
}
.collection .row .carrier .left .image {
  border-radius: 10rpx;
  width: 22vw;
  height: 22vw;
}
.collection .row .carrier .left .tag {
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 60rpx;
}
.collection .row .carrier .mid {
  width: 100%;
  margin: 10rpx 10rpx 0;
}
.collection .row .carrier .mid .title {
  height: 60rpx;
  line-height: 1.2;
  font-size: 28rpx;
}
.collection .row .carrier .mid .data {
  width: 100%;
  display: flex;
  align-items: center;
  margin: 10rpx 0 5rpx;
  font-size: 28rpx;
  color: #606266;
}
.collection .row .carrier .mid .data .item {
  flex: 1;
}
.collection .row .carrier .mid .data .iconfont {
  color: #909399;
  margin-right: 10rpx;
}
.collection .row .carrier .mid .data .status {
  padding: 6rpx 20rpx;
  opacity: 0.8;
  color: #fff;
  font-size: 24rpx;
  border-radius: 6rpx;
}
.collection .row .carrier .mid .bottom {
  line-height: 1.2;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #909399;
}
.collection .row .carrier .mid .bottom .price {
  font-size: 32rpx;
}

