.rf-category {
  background-color: #fff;
  /*模块分类*/
}
.rf-category .category-list {
  width: 100%;
  background-color: #fff;
  display: flex;
}
.rf-category .category-list .left,
.rf-category .category-list .right {
  position: absolute;
  top: 80rpx;
  bottom: 0rpx;
}
.rf-category .category-list .left {
  width: 24%;
  left: 0rpx;
  background-color: #f8f8f8;
}
.rf-category .category-list .left .row {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.rf-category .category-list .left .row .text {
  width: 100%;
  position: relative;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  color: #3c3c3c;
}
.rf-category .category-list .left .row .text .block {
  position: absolute;
  width: 0rpx;
  left: 0;
}
.rf-category .category-list .left .row.on {
  height: 100rpx;
  background-color: #fff;
}
.rf-category .category-list .left .row.on .text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.rf-category .category-list .left .row.on .text .block {
  width: 6rpx;
  height: 120%;
  left: 10rpx;
}
.rf-category .category-list .right {
  width: 76%;
  left: 24%;
  background-color: #fff;
}
.rf-category .category-list .right .second-category {
  z-index: 10;
  white-space: nowrap;
  width: 100%;
  margin: 10rpx 10rpx 20rpx;
}
.rf-category .category-list .right .second-category .second-category-tag {
  margin-right: 20rpx;
  padding: 5rpx 30rpx;
  display: inline-block;
  border-radius: 8rpx;
  font-size: 26rpx;
}
.rf-category .category-list .right .second-category .second-category-normal {
  color: #303133;
  border: none;
  background-color: #f8f6fc;
}
.rf-category .category-list .right .category {
  width: 100%;
  padding: 0 15rpx 20rpx;
}
.rf-category .category-list .right .category .banner {
  width: 96%;
  margin: 10rpx auto 30rpx;
  height: 24.262vw;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.05);
}
.rf-category .category-list .right .category .banner image {
  width: 100%;
  height: 24.262vw;
}
.rf-category .category-list .right .category .order-by-wrapper {
  height: 48rpx;
  line-height: 48rpx;
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
  font-size: 26rpx;
}
.rf-category .category-list .right .category .order-by-wrapper .order-by {
  display: flex;
  justify-content: center;
  align-items: center;
}
.rf-category .category-list .right .category .order-by-wrapper .order-by .order-by-item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  margin: 0 20rpx 0 10rpx;
  color: #909399;
}
.rf-category .category-list .right .category .order-by-wrapper .order-by .order-by-item .iconfont-group {
  margin-top: -2rpx;
}
.rf-category .category-list .right .category .order-by-wrapper .order-by .order-by-item .iconfont {
  height: 16rpx;
  line-height: 16rpx;
  display: block;
  margin-left: 6rpx;
  font-weight: 550;
  font-size: 20rpx;
}
.rf-category .category-list .right .category .list {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.rf-category .category-list .right .category .list .box {
  width: calc(71.44vw / 3);
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.rf-category .category-list .right .category .list .box image {
  width: 64%;
  height: calc(71.44vw / 3 * 0.64);
}
.rf-category .category-list .right .category .list .box .text {
  margin-top: 8rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 26rpx;
}
.rf-category .category-list .right .category .list .box .category-tag {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  color: #303133;
  background-color: #f8f8f8;
  border-radius: 6rpx;
}
.rf-category .category-list .right .category .second-category-text {
  display: flex;
  justify-content: space-between;
}
.rf-category .category-list .right .category .no-data {
  margin: 48rpx 0;
  color: #909399;
  display: flex;
  justify-content: center;
  align-items: center;
}
.rf-category .category-list .right .category .no-data .iconfont {
  margin-right: 20rpx;
  font-size: 48rpx;
}
.rf-category .one-cover-category {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.rf-category .one-cover-category .box {
  width: calc(71.44vw / 3);
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.rf-category .one-cover-category .box image {
  width: 64%;
  height: calc(71.44vw / 3 * 0.64);
}
.rf-category .one-cover-category .box .text {
  margin-top: 8rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 26rpx;
}
.rf-category .one-cover-category .box .category-tag {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  color: #303133;
  background-color: #f8f8f8;
  border-radius: 6rpx;
}
.rf-category .tui-product-container {
  flex: 1;
  margin-right: 10rpx;
}
.rf-category .tui-product-container:last-child {
  margin-right: 0;
}
.rf-category .category-product-list {
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}
.rf-category .category-product-list:last-child {
  border-bottom: none;
  background-color: #007aff;
}
.rf-category .tui-pro-item {
  width: 100%;
  margin-bottom: 20rpx;
  background: #fff;
  box-sizing: border-box;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.15s ease-in-out;
}
.rf-category .tui-flex-list {
  display: flex;
  margin-bottom: 1rpx !important;
}
.rf-category .tui-pro-img {
  width: 100%;
  display: block;
}
.rf-category .tui-proimg-list {
  width: 160rpx;
  height: 160rpx !important;
  flex-shrink: 0;
  border-radius: 12rpx;
}
.rf-category .tui-pro-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.rf-category .tui-pro-tit {
  color: #2e2e2e;
  font-size: 26rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.rf-category .tui-sale-price {
  font-size: 34rpx;
  font-weight: 500;
}
.rf-category .tui-factory-price {
  font-size: 24rpx;
  color: #a0a0a0;
  text-decoration: line-through;
  padding-left: 12rpx;
}
.rf-category .tui-pro-pay {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #656565;
}
.rf-category .tui-pro-pay .iconfont {
  font-size: 38rpx;
  padding: 0 10rpx;
}
.rf-category .popup .layer {
  bottom: 0;
}
.rf-category .input-box {
  height: 60rpx;
  position: relative;
  display: flex;
  align-items: center;
  margin: 10rpx 20rpx;
}
.rf-category .input-box .iconfont {
  width: 60rpx;
  font-size: 48rpx;
  font-weight: 500;
}
.rf-category .input-box .iconsousuo2 {
  z-index: 999;
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  font-size: 34rpx;
  color: #c0c0c0;
}
.rf-category .input-box input {
  flex: 1;
  height: 60rpx;
  background-color: #f5f5f5;
  padding-left: 28rpx;
  border-radius: 30rpx;
  color: #888;
  font-size: 28rpx;
}

