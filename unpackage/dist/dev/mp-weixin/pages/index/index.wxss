.rf-index .wrapper {
  border-radius: 10rpx;
}
.rf-index .wrapper .h-list {
  background-color: #f8f8f8;
  white-space: nowrap;
  padding: 0 10rpx;
}
.rf-index .wrapper .h-list .h-item {
  margin: 10rpx 10rpx 10rpx 0;
  display: inline-block;
  background-color: #fff;
  font-size: 24rpx;
  width: 280rpx;
  border-radius: 6rpx;
}
.rf-index .wrapper .h-list .h-item .h-item-img {
  display: inline-block;
  width: 280rpx;
  height: 300rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.01);
}
.rf-index .wrapper .h-list .h-item .title {
  width: 280rpx;
  white-space: normal;
  height: 60rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  padding: 0 10rpx;
  margin: 10rpx 0;
}
.rf-index .wrapper .h-list .h-item .last-line {
  padding: 0 10rpx 20rpx;
  margin-bottom: 5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* 垂直居中 */
}
.rf-index .wrapper .h-list .h-item .last-line .red {
  font-size: 24rpx;
  margin-right: 4rpx;
}
.rf-index .wrapper .h-list .h-item .price {
  font-size: 26rpx;
  line-height: 1;
}
.rf-index .wrapper .h-list .h-item .price .m-price {
  margin-left: 8rpx;
  color: #909399;
  font-size: 24rpx;
  text-decoration: line-through;
}
.rf-index .swiper {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.rf-index .swiper .swiper-box {
  width: 92%;
  height: 40vw;
  overflow: hidden;
  border-radius: 15rpx;
  box-shadow: 0rpx 8rpx 25rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1;
}
.rf-index .swiper .swiper-box swiper {
  width: 100%;
  height: 40vw;
}
.rf-index .swiper .swiper-box swiper swiper-item image {
  width: 100%;
  height: 40vw;
}
.rf-index .hot-recommend {
  background-color: #fff;
  display: flex;
  padding: 20rpx 30rpx 0;
}
.rf-index .hot-recommend .hot-recommend-image {
  width: 100%;
  height: 100%;
}
.rf-index .hot-recommend .left {
  flex: 3;
  height: 350rpx;
  margin-right: 15rpx;
}
.rf-index .hot-recommend .right {
  flex: 4;
}
.rf-index .hot-recommend .right .hot-recommend-image {
  height: 170rpx;
}
.rf-index .swiper-item-text {
  position: absolute;
  bottom: 16rpx;
  left: 30rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(0, 0, 0, 0.2);
  width: 90%;
  color: #fff;
  border-bottom-left-radius: 12rpx;
  padding-left: 20rpx;
}
.rf-index .swiper-slide-header .iconfont {
  font-size: 40rpx;
  font-weight: 600;
}
.rf-index .category-list-wrapper .category-list {
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.rf-index .category-list-wrapper .category-list .category {
  margin-top: 10rpx;
  width: calc(20% - 20rpx);
  height: 132rpx;
  display: flex;
  text-align: center;
  flex-wrap: wrap;
}
.rf-index .category-list-wrapper .category-list .category .img {
  width: 100%;
  display: flex;
  justify-content: center;
}
.rf-index .category-list-wrapper .category-list .category .img image {
  width: 12vw;
  height: 12vw;
  border-radius: 50%;
}
.rf-index .category-list-wrapper .category-list .category .text {
  margin-top: 16rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #3c3c3c;
}
.rf-index .copyright {
  margin: 10rpx 0;
  width: 100%;
  text-align: center;
  color: #666;
}
.rf-index .copyright ._a {
  display: block;
  color: #666;
  text-decoration: none;
}
.rf-index .order-item {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.rf-index .order-item .goods-box-single {
  display: flex;
  padding: 40rpx 10rpx 10rpx;
  height: 330rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
  box-shadow: 2px 2px 10px rgba(66, 135, 193, 0.2);
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  position: relative;
}
.rf-index .order-item .goods-box-single .goods-img {
  display: block;
  border-radius: 12rpx;
  width: 190rpx;
  height: 200rpx;
}
.rf-index .order-item .goods-box-single .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 0 24rpx;
  overflow: hidden;
}
.rf-index .order-item .goods-box-single .right .title {
  font-weight: bold;
  line-height: 1.2;
  margin: 10rpx 0;
}
.rf-index .order-item .goods-box-single .right .attr-box {
  line-height: 1.2;
  margin-bottom: 8rpx;
  margin-left: 10rpx;
}
.rf-index .order-item .goods-box-single .right .last-line {
  margin-top: 3rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* 垂直居中 */
}
.rf-index .order-item .goods-box-single .right .last-line .red {
  margin-right: 4rpx;
}
.rf-index .order-item .goods-box-single .right .price {
  font-size: 32rpx;
  line-height: 1;
}
.rf-index .order-item .goods-box-single .right .price .m-price {
  margin-left: 8rpx;
  color: #909399;
  font-size: 24rpx;
  text-decoration: line-through;
}
.rf-index .order-item .goods-box-single .right .triangle-wrapper {
  position: absolute;
  overflow: hidden;
  top: 0;
  right: 0;
  border-radius: 12rpx;
}
.rf-index .order-item .goods-box-single .right .triangle-wrapper .triangle {
  color: #5eba8f;
  width: 0;
  height: 0;
  border-top: 120rpx solid;
  opacity: 0.8;
  border-left: 120rpx solid transparent;
}
.rf-index .order-item .goods-box-single .right .triangle-wrapper .triangle-content {
  position: absolute;
  top: 28rpx;
  right: 0;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  font-size: 22rpx;
  color: #fff;
}
.rf-index .order-item .action-box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 90rpx;
  position: relative;
}
.rf-index .order-item .action-box .discount-time {
  font-size: 24rpx;
  color: #4cd964;
  margin-right: 20rpx;
}
.rf-index .index-cate-product-list {
  padding-top: 10rpx;
  background-color: #f8f8f8;
}
.rf-index .index-cate-product-list .no-data {
  margin: 48rpx 0;
  color: #909399;
  display: flex;
  justify-content: center;
  align-items: center;
}
.rf-index .index-cate-product-list .no-data .iconfont {
  margin-right: 20rpx;
  font-size: 48rpx;
}

